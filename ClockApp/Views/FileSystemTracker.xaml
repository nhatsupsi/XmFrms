<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClockApp.Core.Forms.Views.FileSystemTracker">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="{Binding PathText,Mode=OneWay}" HorizontalOptions="Center" VerticalOptions="Center"></Label>
        <Button Text="Start" HorizontalOptions="Center" VerticalOptions="Center" Command="{Binding StartCommand}"></Button>
        <Label Text="{Binding ChangesText,Mode=OneWay}" HorizontalOptions="Center" VerticalOptions="Center"></Label>
    </StackLayout>
</ContentPage>